{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    <div class="admin_project_show">
        <h1>Portfolio</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ portfolio.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ portfolio.name }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ portfolio.image }}</td>
                </tr>
                <tr>
                    <th>Summary</th>
                    <td>{{ portfolio.summary }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ portfolio.content }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ portfolio.duration }}</td>
                </tr>
                <tr>
                    <th>Langage</th>
                    <td>{{ portfolio.langage }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_project_index') }}">back to list</a>

        <a href="{{ path('app_admin_project_edit', {'id': portfolio.id}) }}">edit</a>

        {{ include('admin_project/_delete_form.html.twig') }}
    </div>
{% endblock %}
